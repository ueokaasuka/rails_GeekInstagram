<div class="container">
  <div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-10">
    <div class="icon">
      <%= image_tag 'bluebird.png' %>
      </div>
      <h2 class="text-center text-weight-bold">GeekInstagramにログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field pt-3">
          <%= f.label :電話、メールまたはユーザー名 %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12 form-control"  %>
        </div>

        <div class="field pt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-12 form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field pt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :保存しますか？ %>
          </div>
        <% end %>

        <div class="actions pt-3,area">
        
        <div class="box1">
          <a class="block button" href="#">
          <p>
          <%= f.submit "ログイン", class: "btn btn-primary" %></a>
        </p>
          
          </div>
        </div>
      <% end %>

      <div class="pt-3">
      </div>
        <%= render "users/shared/links" %>
        </div>
      <div class="col-md-1">

    </div>
  </div>
</div>